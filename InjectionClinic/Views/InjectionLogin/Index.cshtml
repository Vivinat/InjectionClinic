@{
}

<script src="/lib/jquery/dist/jquery.js"></script>


<head>
    <link rel="stylesheet" href="~/css/loginForm.css">
</head>


<div class="form-bg">
    <div class="container">
        <div class="row">
            <div class="col-md-offset-4 col-md-4 col-sm-offset-3 col-sm-6">
                <div class="form-container">
                    <h3 class="title">Emitir Informações do Usuário</h3>
                    <form class="form-horizontal" method="post" action="/InjectionLogin/Login">
                        <div class="form-icon">
                            <i class="fa fa-user-circle"></i>
                        </div>
                        <div class="form-group">
                            <span class="input-icon"><i class="fa fa-user"></i></span>
                            <input type="text" class="form-control" name="username" placeholder="Username">
                        </div>
                        <div class="form-group">
                            <span class="input-icon"><i class="fa fa-lock"></i></span>
                            <input type="password" class="form-control" name="password" placeholder="Password">
                        </div>
                        <button type="submit" class="btn signin">Login</button>
                    </form>

                    <button id="Injection01" class="btn-dark">Return all</button>
                    <button id="Injection02" class="btn-dark">Drop Table</button>

                    <table id="queryResultsTable">
                        <!-- Tabela será preenchida com os resultados da consulta -->
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>



<script src="/js/TableHandler.js"></script>
